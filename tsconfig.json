{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@routes": [
        "app/routes"
      ],
      "@routes/*": [
        "app/routes/*"
      ],
      "@layout": [
        "app/layout"
      ],
      "@layout/*": [
        "app/layout/*"
      ]
    }
  }
}